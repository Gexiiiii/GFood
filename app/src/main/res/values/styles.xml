<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorGrayBg</item>
    </style>

    <style name="StartAppTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_start</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    </style>

    <!--导航栏文字样式-->
    <style name="BottomTabText">
        <item name="android:textColor">@drawable/color_tab_text_bottom</item>
        <item name="android:textSize">@dimen/font_size_12sp</item>
    </style>

    <style name="FavoriteTabText">
        <item name="android:textColor">@drawable/color_tab_text_title</item>
        <item name="android:textSize">@dimen/font_size_18sp</item>
    </style>

    <style name="FlowDefaultText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:paddingLeft">@dimen/dimen_16dp</item>
        <item name="android:paddingRight">@dimen/dimen_16dp</item>
        <item name="android:layout_margin">@dimen/dimen_5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/bg_textview</item>
    </style>

    <!--黑色字体-->
    <style name="BlackText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BlackText.Blod_16sp">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <style name="BlackText.15sp">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_15sp</item>
    </style>

    <style name="BlackText.16sp">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <style name="BlackText.17sp">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_17sp</item>
    </style>

    <style name="BlackText.18sp">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_18sp</item>
    </style>

    <!--白色字体-->
    <style name="WhiteText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WhiteText.Blod_16sp">
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <style name="WhiteText.12sp">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_12sp</item>
    </style>

    <style name="WhiteText.16sp">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <!--灰色字体-->
    <style name="GrayText">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GrayText.12sp">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_12sp</item>
    </style>

    <style name="GrayText.14sp">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
    </style>

    <style name="GrayText.16sp">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <!--主题色字体-->
    <style name="PrimaryText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PrimaryText.16sp">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <style name="PrimaryText.17sp">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_17sp</item>
    </style>
</resources>
