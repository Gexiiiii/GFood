<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingTop="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/dimen_16dp">

    <View
        android:id="@+id/vMark"
        android:layout_width="@dimen/dimen_10dp"
        android:layout_height="@dimen/dimen_10dp"
        android:background="@drawable/bg_primary_10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCateTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCateTitle" />

    <TextView
        android:id="@+id/tvCateTitle"
        style="@style/BlackText.16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        app:layout_constraintLeft_toRightOf="@+id/vMark"
        app:layout_constraintTop_toTopOf="parent" />

    <com.gexiiiii.gfood.widget.FlowLayout
        android:id="@+id/flCate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCateTitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@color/colorGrayBg"
        app:layout_constraintTop_toBottomOf="@+id/flCate" />
</androidx.constraintlayout.widget.ConstraintLayout>